<table class="table">
  <h3>Drafted <small><%= @counts.to_json %></small></h3>
  <tr>
    <th>Player</th>
    <th>Pick #</th>
  </tr>
  <% draft_picks.each do |draft_pick| %>
    <tr>
        <td><%= link_to "#{draft_pick.display_name}", undo_pick_draft_picks_path(draft_id: @draft.id, player_id: draft_pick.player_id, action: 'undo_pick'), method: 'post' %></td>
        <td><%= "#{draft_pick.pick_number}" %></td>
    </tr>
  <% end %>
